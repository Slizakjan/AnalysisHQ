source "https://rubygems.org"

ruby "3.4.7"

# Web framework
gem "sinatra"
gem "sinatra-contrib" # json, cookies, atd.
gem 'puma'        # web server

# PostgreSQL
gem "pg"

# Redis
gem "redis"

# Password hashing
gem "bcrypt"

# Env variables
gem "dotenv"

# Optional: logger / debugging
gem "logger"

# Optional: UUID / secure tokens
gem "securerandom"

# Optional: for development auto-reload
group :development do
  gem "rerun"
end
